{
  "name": "dumoli-ui",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A reusable React component library built with Tailwind CSS.",
  "author": "PT. Sat Nusapersada, Tbk - MIS Dept",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/es/index.js",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint src/ --max-warnings 0",
    "lint:fix": "eslint src/ --fix",
    "copy:css": "cpy \"src/**/*.css\" dist --parents",
    "copy:assets": "cpy \"src/assets/**/*\" dist/assets -r",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./src/output.css --minify",
    "build": "yarn build:css && rimraf dist && tsc -p . && yarn copy:css && yarn copy:assets",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type:check": "tsc --project tsconfig.json --pretty",
    "export": "node scripts/export.js",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "react-router-dom": "^7.5.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "copy-webpack-plugin": "^13.0.0",
    "cpy-cli": "^5.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "file-loader": "^6.2.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "inquirer": "^12.4.2",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rimraf": "^6.0.1",
    "shelljs": "^0.9.2",
    "style-loader": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.1",
    "webpack": "^5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "declare": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts,jsx,tsx}": [
      "eslint src/",
      "prettier --write ."
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
