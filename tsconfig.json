{
  "compilerOptions": {
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ES6",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "importHelpers": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
